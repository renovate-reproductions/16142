{
  "extends": [
    "config:base"
  ],
  "dependencyDashboard": true,
  "prHourlyLimit": 0,
  "git-submodules": {
    "enabled": true
  },
  "packageRules": [
    {
      "groupName": "Submodule updates",
      "matchManagers": ["git-submodules"],
      "automerge": true,
      "automergeType": "branch",
      "requiredStatusChecks": null
    }
  ]
}
